create database mundo;
use mundo;

create table pais (
nome varchar (35) not null,
primary key (nome),
continente varchar(35),
populacao float,
pib float,
exp_vida float);

select nome from pais
 where pib > (select pib from pais where nome = 'canada');
 
 select * from cidade as c left join pais as p on (c.capital = p.pib);
 
 select cidade.nome, pais.pib from cidade join pais on pais.nome = cidade.pais where pais.pib > 1000 and capital = 'S';


create table cidade (
nome varchar (35) not null,
primary key (nome),
pais varchar (35),
populacao float,
capital varchar(1),
foreign key (pais) references pais (nome));

select nome, populacao, capital

create table rio (
nome varchar (35) not null,
primary key (nome),
origem varchar (35),
comprimento float,
foreign key (origem) references pais (nome));

select origem, nome, comprimento from rio
order by comprimento asc;

